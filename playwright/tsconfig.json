{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": "..",
    "paths": {
      "src/*": ["./src/*"],
      "page-objects/*": ["./playwright/page-objects/*"]
    },
    "noEmit": false,
    "isolatedModules": false
  },
  "exclude": [
    "node_modules",
    "playwright", 
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    ".",
    "../config/*"
  ]
}
